<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".overweight">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/Velvet_Maroon"
        android:textSize="30dp"
        android:text="Overweight: BMI 25.0-29.9"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg13"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/over5"
        android:layout_below="@id/title"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg14"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/over2"
        android:layout_below="@id/title"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg15"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/over3"
        android:layout_below="@id/gifimg13"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg16"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="200dp"
        android:src="@drawable/over4"
        android:layout_below="@id/gifimg13"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg17"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/over1"
        android:layout_below="@id/gifimg15"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimg18"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginLeft="200dp"
        android:src="@drawable/overweight06"
        android:layout_below="@id/gifimg15"/>

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/gifimg18"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/Blue_Jay"
        android:text="Logout"
        android:textSize="20sp" />



</RelativeLayout>